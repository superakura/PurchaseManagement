
@{
    ViewBag.Title = "质量反馈单提报";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="modal fade" id="showModal">
    <div class="modal-dialog modal-lg">
        <form id="formInfo">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h5 class="modal-title">质量反馈单信息</h5>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        @Html.Partial("FeedBackInfo")
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-lg">
        <form id="formInfo">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="modalTitle">公告信息</h4>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="tbxTitle">反馈单名称<span class="text-danger">(必填)</span></label>
                                        <input type="text" class="form-control" name="tbxTitle" id="tbxTitle" placeholder="反馈单名称">
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label for="tbxSupplierName">供应商名称<span class="text-danger">(必填)</span></label>
                                        <input type="text" class="form-control" name="tbxSupplierName" id="tbxSupplierName" placeholder="供应商名称">
                                    </div>
                                </div>
                                <div class="col-md-2"></div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="text-info" for="tbxMaterialNum">ERP计划预留号/物资编码<span class="text-danger">(选填其中一个)</span></label>
                                        <input type="text" class="form-control" name="tbxMaterialNum" id="tbxMaterialNum" placeholder="ERP计划预留号/物资编码">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label for="ddlMaterialQualityType">物资质量问题类别<span class="text-danger">(必填)</span></label>
                                        <select class="form-control" id="ddlMaterialQualityType"></select>
                                    </div>
                                </div>
                                <div class="col-md-2"></div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="text-info" for="tbxErpOrderNum">ERP订单号<span class="text-danger">(选填其中一个)</span></label>
                                        <input type="text" class="form-control" name="tbxErpOrderNum" id="tbxErpOrderNum" placeholder="ERP订单号">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="editor">问题内容<span class="text-danger">(必填)</span></label>
                                        <script id="editor" type="text/plain" style="height:300px;">
                                        </script>
                                    </div>
                                    <span class="hidden" id="InfoID"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" id="btnSave" class="btn btn-info">
                        <i class="glyphicon glyphicon-floppy-save"></i> 保存
                    </button>
                    <button type="button" id="btnSubmit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-ok"></i> 提交
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="box box-danger">
    <div class="box-header">
        <h3 class="box-title">质量反馈单提报</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <form class="form-inline" role="form">
                    <div class="form-group">
                        <label for="tbxTitleSearch">反馈单名称：</label>
                        <input type="text" class="form-control" id="tbxTitleSearch" placeholder="反馈单名称">
                    </div>
                    <div class="form-group">
                        <label for="ddlMaterialQualityTypeSearch">问题类别：</label>
                        <select id="ddlMaterialQualityTypeSearch" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label for="ddlMaterialQualityStateSearch">反馈单状态：</label>
                        <select id="ddlMaterialQualityStateSearch" class="form-control">
                            <option value="">全部</option>
                            <option value="待提交">待提交</option>
                            <option value="待接收">待接收</option>
                            <option value="接收完成">接收完成</option>
                            <option value="接收回退">接收回退</option>
                            <option value="回复完毕">回复完毕</option>
                            <option value="回复回退">回复回退</option>
                            <option value="审核通过">审核通过</option>
                            <option value="审核回退">审核回退</option>
                        </select>
                    </div>
                    <button type="button" id="btnSearch" class="btn btn-primary">
                        <span class="glyphicon glyphicon-search"></span> 查询
                    </button>
                </form>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <div id="toolbar" class="btn-group">
                    <button id="btnAdd" type="button" class="btn btn-info">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 新增
                    </button>
                </div>
                <table id="bsTable"></table>
            </div>
        </div>
    </div>
</div>
<script src="~/ueditor.config.js"></script>
<script src="~/ueditor.all.min.js"></script>
<script>
    $(function () {
        var ue = UE.getEditor('editor');

        var operateEvents = {
            'click .edit': function (e, value, row, index) {
                if (row.FeedBackState == "待提交") {
                    $("label.error").hide();
                    $(".error").removeClass("error");
                    $('#myModal').modal('show');
                    $("#modalTitle").text("编辑信息");

                    $("#tbxMaterialNum").val(row.MaterialNum);//物资编码
                    $("#tbxErpOrderNum").val(row.ErpOrderNum);//erp订单号
                    $("#tbxTitle").val(row.FeedbackTitle);//反馈单标题
                    $("#tbxSupplierName").val(row.SupplierName);//供应商名称
                    $("#InfoID").text(row.ID);//供应商名称
                    UE.getEditor("editor").setContent(row.FeedbackContent);
                    $("#ddlMaterialQualityType ").val(row.MaterialQualityTypeID);
                }
                else
                {
                    toastr.warning("只能修改【待提交】信息！", "提示");
                }
            },
            'click .remove': function (e, value, row, index) {
                if (row.FeedBackState == "待提交" || row.FeedBackState == "接收回退") {
                    Ewin.confirm({ message: "确认要删除吗？" }).on(function (e) {
                        if (!e) {
                            return;
                        }
                        //写服务器后台删除方法,成功后执行页面删除数据
                        var args = { "feedbackID": row.ID };
                        $.post("/MaterialQualityFeedback/Del", encodeURIComponent(JSON.stringify(args)), function (result) {
                            if (result == "ok") {
                                //后台删除成功后，调用前台删除方法
                                $('#bsTable').bootstrapTable('remove', {
                                    field: 'ID',
                                    values: [row.ID]
                                });
                                toastr.success("删除成功！", "提示")
                            }
                            else {
                                toastr.error("保存错误，请联系5613877！", "提示");
                            }
                        });

                    });
                }
                else {
                    toastr.warning("只能删除【待提交】或【接收回退】信息！", "提示");
                }
            }
        };
        function operateFormatter(value, row, index) {
            return [
                '<a class="edit" href="javascript:void(0)" title="edit">',
                '<i class="glyphicon glyphicon-pencil"></i>',
                '</a>  ',
                '<a class="remove" href="javascript:void(0)" title="remove">',
                '<i class="glyphicon glyphicon-trash"></i>',
                '</a>'
            ].join('&nbsp;&nbsp;');
        }

        var operateEventTitle = {
            'click .btnInfoShow': function (e, value, row, index) {
                $("#logPanel").hide();
                $('#showModal').modal('show');
                $("#lblFeedbackTitle").text(row["FeedbackTitle"]);
                $("#lblSupplierName").text(row["SupplierName"]);
                $("#lblFeedbackType").text(row["MaterialQualityTypeName"]);
                $("#lblFeedbackState").text(row["FeedBackState"]);
                $("#lblErpOrderNum").text(row["ErpOrderNum"]);
                $("#lblMaterialNum").text(row["MaterialNum"]);
                $("#lblDeptName").text(row["DeptName"]);

                $("#lblInputPerson").text(row["InputPersonName"]);
                $("#lblInputPersonPhone").text(row["InputPersonPhone"] + '/' + row["InputPersonMobile"]);
                $("#lblInputDate").text(getJsonDateTime(row["InputDateTime"]));

                $("#lblReplyPersonName").text(row["ReplyPersonName"] == null ? "" : row["ReplyPersonName"]);
                $("#lblReplyDateTime").text(row["ReplyDateTime"] == null ? "" : getJsonDateTime(row["ReplyDateTime"]));

                $("#lblCheckPersonName").text(row["CheckPersonName"] == null ? "" : row["CheckPersonName"]);
                $("#lblCheckDateTime").text(row["CheckDateTime"] == null ? "" : getJsonDateTime(row["CheckDateTime"]));

                var args = {"id": row["ID"]};
                $.post("/MaterialQualityFeedback/GetContent", encodeURIComponent(JSON.stringify(args)), function (result) {
                    $("#lblFeedbackContent").html(result["FeedbackContent"]);
                    $("#lblReplyContent").html(result["ReplyContent"]);
                });
                if (row["FeedBackState"] != "审核通过") {
                    $("#panelReply").hide();
                }
                else {
                    $("#panelReply").show();
                }

                $("#InfoID").text(row["ID"]);
            }
        };
        function operateFormatterTitle(value, row, index) {
            return "<a class='btnInfoShow' href='javascript:void(0)'>" + value + "</a>";
        }

        var columns = [
            {
                checkbox: true
            },
            {
                title: '序号',
                formatter: function (value, row, index) {
                    return index + 1;
                }
            },
            {
                field: 'ID',
                title: '数据ID',
                visible: false,//false表示不显示
            },
            {
                field: 'FeedbackTitle',
                title: '反馈单名称',
                events: operateEventTitle,
                formatter: operateFormatterTitle
            },
            {
                field: 'SupplierName',
                title: '供应商名称',
                visible:true
            },
            {
                field: 'MaterialNum',
                title: 'ERP计划预留号/物资编码',
                visible:false
            },
            {
                field: 'ErpOrderNum',
                title: 'ERP订单号',
                visible:false
            },
            {
                field: 'MaterialQualityTypeName',
                title: '质量问题类别'
            },
            {
                field: 'DeptName',
                title: '提报部门'
            },
            {
                field: 'InputPersonName',
                title: '提报人',
                formatter: function (value, row, index) {
                    var person = "<a href='#' data-toggle='tooltip' data-placement='top' title='联系方式：" + row["InputPersonPhone"] + '/' + row["InputPersonMobile"] + "'>" + value + "</a>";
                    return person;
                }
            },
            {
                field: 'InputDateTime',
                title: '提报时间',
                formatter: function (value, row, index) {
                    return getJsonDateTime(value)
                }
            },
            {
                field: 'AcceptPersonName',
                title: '接收人',
                visible:false
            },
            {
                field: 'AcceptDateTime',
                title: '接收时间',
                formatter: function (value, row, index) {
                    return value == null ? "" : getJsonDateTime(value)
                },
                visible:false
            },
            {
                field: 'ReplyPersonName',
                title: '回复人'
            },
            {
                field: 'ReplyDateTime',
                title: '回复时间',
                formatter: function (value, row, index) {
                    return value == null ? "" : getJsonDateTime(value);
                }
            },
            {
                field: 'CheckPersonName',
                title: '审核人',
                visible:false
            },
            {
                field: 'CheckDateTime',
                title: '审核时间',
                formatter: function (value, row, index) {
                    return value == null ? "" : getJsonDateTime(value);
                },
                visible:false
            },
            {
                field: 'FeedBackState',
                title: '反馈单状态',
                formatter: function (value, row, index) {
                    if (row['FeedBackState'] == "待提交") {
                        return '<span class="label label-warning">' + value + '</span>';
                    }
                    if (row['FeedBackState'] == "待接收") {
                        return '<span class="label label-info">' + value + '</span>';
                    }
                    if (row['FeedBackState'] == "接收完成") {
                        return '<span class="label label-default">' + value + '</span>';
                    }
                    if (row['FeedBackState'] == "接收回退") {
                        return '<span class="label label-danger">' + value + '</span>';
                    }
                    if (row['FeedBackState'] == "回复完毕") {
                        return '<span class="label label-primary">' + value + '</span>';
                    }
                    if (row['FeedBackState'] == "回复回退") {
                        return '<span class="label label-danger">' + value + '</span>';
                    }
                    if (row['FeedBackState'] == "审核通过") {
                        return '<span class="label label-success">' + value + '</span>';
                    }
                    if (row['FeedBackState'] == "审核回退") {
                        return '<span class="label label-danger">' + value + '</span>';
                    }
                    return value;
                }
            },
            {
                field: 'operate',
                title: '编辑&删除',
                align: 'center',
                events: operateEvents,
                formatter: operateFormatter
            }];
        var queryParams = function (params) {
            var temp = {   //这里的键的名字和控制器的变量名必须一直，这边改动，控制器也需要改成一样的
                limit: params.limit,   //页面大小
                offset: params.offset,  //页码
                feedbackTitle: $("#tbxTitleSearch").val(),
                materialQualityTypeID: $("#ddlMaterialQualityTypeSearch").val(),
                materialQualityState: $("#ddlMaterialQualityStateSearch").val()
            };
            return temp;
        };

        //初始化BS-Table
        $('#bsTable').bootstrapTable({
            url: '/MaterialQualityFeedback/GetList',         //请求后台的URL（*）
            contentType: 'application/x-www-form-urlencoded',
            method: 'post',                     //请求方式（*）
            toolbar: '#toolbar',                //工具按钮用哪个容器
            striped: true,                      //是否显示行间隔色
            cache: false,                       //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
            pagination: true,                   //是否显示分页（*）
            sortable: false,                     //是否启用排序
            sortOrder: "asc",                   //排序方式
            queryParams: queryParams,           //传递参数（*）
            sidePagination: "server",           //分页方式：client客户端分页，server服务端分页（*）
            pageNumber: 1,                       //初始化加载第一页，默认第一页
            pageSize: 10,                       //每页的记录行数（*）
            pageList: [5, 10, 15, 20],        //可供选择的每页的行数（*）
            search: false,                       //是否显示表格搜索，此搜索是客户端搜索，不会进服务端，所以，个人感觉意义不大
            strictSearch: true,
            showColumns: true,                  //是否显示所有的列
            showRefresh: true,                  //是否显示刷新按钮
            minimumCountColumns: 2,             //最少允许的列数
            clickToSelect: false,                //是否启用点击选中行
            //height: 600,                        //行高，如果没有设置height属性，表格自动根据记录条数觉得表格高度
            uniqueId: "ID",                     //每一行的唯一标识，一般为主键列
            showToggle: false,                    //是否显示详细视图和列表视图的切换按钮
            cardView: false,                    //是否显示详细视图
            detailView: false,                   //是否显示父子表
            paginationPreText: "上一页",
            paginationNextText: "下一页",
            showExport: false,                     //是否显示导出
            columns: columns
        })
        .on('all.bs.table', function (e, name, args) {
            $('[data-toggle="tooltip"]').tooltip();
        });

        //搜索按钮
        $("#btnSearch").click(function () {
            $("#bsTable").bootstrapTable('refresh');
        });

        //搜索加载质量问题类型函数
        LoadProblemTypeSearch();
        function LoadProblemTypeSearch() {
            $.post("/MaterialQualityType/GetListAll", "", function (result) {
                var list = "";
                $.each(result, function (indexInArray, valueOfElement) {
                    list += "<option value='" + valueOfElement["MaterialQualityTypeID"] + "'>" + valueOfElement["MaterialQualityTypeName"] + "</option>";
                });
                $("#ddlMaterialQualityTypeSearch").empty().append(list).prepend("<option value=''>全部</option>").val(0);
            });
        };

        //表单加载质量问题类型函数
        LoadProblemType();
        function LoadProblemType() {
            $.post("/MaterialQualityType/GetListAll", "", function (result) {
                var list = "";
                $.each(result, function (indexInArray, valueOfElement) {
                    list += "<option value='" + valueOfElement["MaterialQualityTypeID"] + "'>" + valueOfElement["MaterialQualityTypeName"] + "</option>";
                });
                $("#ddlMaterialQualityType").empty().append(list);
            });
        };

        //添加按钮
        $("#btnAdd").click(function () {
            clearInfo();
            $('#myModal').modal('show');
            $("#modalTitle").text("添加质量反馈单");
        });

        //清空myModal表单函数
        function clearInfo() {
            $("#tbxTitle,#tbxSupplierName,#tbxMaterialNum,#tbxErpOrderNum").val("");
            UE.getEditor("editor").setContent("");
            $("#InfoID").text("");
            $("label.error").hide();
            $(".error").removeClass("error");
        }

        //对申请表单进行前端验证
        var valid = $("#formInfo").validate({
            rules: {
                tbxTitle: { required: true, maxlength: 30 },
                tbxSupplierName: { required: true, maxlength: 30 }
            }
        });

        //提交按钮
        $("#btnSubmit").click(function () {
            if (valid.form()) {
                var contentCount = UE.getEditor("editor").getContentLength(true);//问题描述的内容长度
                var materialNum = $("#tbxMaterialNum").val();//物资编码
                var erpOrderNum = $("#tbxErpOrderNum").val();//erp订单号
                if (materialNum!=""||erpOrderNum!="") {
                    if (contentCount > 0) {
                        if ($("#InfoID").text() != "") {
                            //保存后提交
                            Ewin.confirm({ message: "确定要提交吗？" }).on(function (e) {
                                if (!e) {
                                    return;
                                }
                                else {
                                    var feedbackTitle = $("#tbxTitle").val();
                                    var supplierName = $("#tbxSupplierName").val();
                                    var materialQualityTypeID = $("#ddlMaterialQualityType").val();
                                    var feedbackContent = UE.getEditor("editor").getContent();
                                    var clickState = "提交";
                                    var feedbackID = $("#InfoID").text();

                                    var args = {
                                        "feedbackID": feedbackID,
                                        "feedbackTitle": feedbackTitle,
                                        "supplierName": supplierName,
                                        "materialQualityTypeID": materialQualityTypeID,
                                        "materialNum": materialNum,
                                        "erpOrderNum": erpOrderNum,
                                        "feedbackContent": feedbackContent,
                                        "clickState": clickState
                                    };
                                    $.post("/MaterialQualityFeedback/Update", encodeURIComponent(JSON.stringify(args)), function (result) {
                                        if (result == "ok") {
                                            $("#myModal").modal("hide");
                                            toastr.success("操作成功！", "提示");
                                            $("#bsTable").bootstrapTable('refresh');
                                        }
                                        else {
                                            $("#myModal").modal("hide");
                                            toastr.error("系统错误，请联系5613877！", "提示");
                                        }
                                    });
                                }
                            });
                        }
                        else {
                            //直接提交
                            Ewin.confirm({ message: "确认要提交吗？" }).on(function (e) {
                                if (!e) {
                                    return;
                                }
                                else {
                                    var feedbackTitle = $("#tbxTitle").val();
                                    var supplierName = $("#tbxSupplierName").val();
                                    var materialQualityTypeID = $("#ddlMaterialQualityType").val();
                                    var feedbackContent = UE.getEditor("editor").getContent();
                                    var clickState = "提交";

                                    var args = {
                                        "feedbackTitle": feedbackTitle,
                                        "supplierName": supplierName,
                                        "materialQualityTypeID": materialQualityTypeID,
                                        "materialNum": materialNum,
                                        "erpOrderNum": erpOrderNum,
                                        "feedbackContent": feedbackContent,
                                        "clickState": clickState
                                    };
                                    $.post("/MaterialQualityFeedback/Insert", encodeURIComponent(JSON.stringify(args)), function (result) {
                                        if (result == "ok") {
                                            $("#myModal").modal("hide");
                                            toastr.success("操作成功！", "提示");
                                            $("#bsTable").bootstrapTable('refresh');
                                        }
                                        else {
                                            $("#myModal").modal("hide");
                                            toastr.error("系统错误，请联系5613877！", "提示");
                                        }
                                    });
                                }
                            });
                        }
                    }
                    else {
                        toastr.error("问题内容必须填写！", "提示");
                    }
                }
                else
                {
                    toastr.error("【ERP计划预留号/物资编码】或【ERP订单号】必须填写一个！", "提示");
                }
            };
        });

        //保存按钮
        $("#btnSave").click(function () {
            if (valid.form()) {
                var contentCount = UE.getEditor("editor").getContentLength(true);//问题描述的内容长度
                var materialNum = $("#tbxMaterialNum").val();//物资编码
                var erpOrderNum = $("#tbxErpOrderNum").val();//erp订单号
                if (materialNum != "" || erpOrderNum != "") {
                    if (contentCount > 0) {
                        if ($("#InfoID").text() != "") {
                            //修改已存在的信息update
                            Ewin.confirm({ message: "确定要保存吗？" }).on(function (e) {
                                if (!e) {
                                    return;
                                }
                                else {
                                    var feedbackTitle = $("#tbxTitle").val();
                                    var supplierName = $("#tbxSupplierName").val();
                                    var materialQualityTypeID = $("#ddlMaterialQualityType").val();
                                    var feedbackContent = UE.getEditor("editor").getContent();
                                    var feedbackID = $("#InfoID").text();
                                    var clickState = "保存";

                                    var args = {
                                        "feedbackID": feedbackID,
                                        "feedbackTitle": feedbackTitle,
                                        "supplierName": supplierName,
                                        "materialQualityTypeID": materialQualityTypeID,
                                        "materialNum": materialNum,
                                        "erpOrderNum": erpOrderNum,
                                        "clickState": clickState,
                                        "feedbackContent": feedbackContent
                                    };
